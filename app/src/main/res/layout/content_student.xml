<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".StudentActivity"
    tools:showIn="@layout/app_bar_student">
    <TextView
        android:layout_marginTop="20dp"
        android:text="Categories"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:textColor="@color/colorPrimary"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
<LinearLayout
    android:layout_marginLeft="40dp"
    android:layout_width="125dp"
    android:layout_height="150dp"
    android:orientation="vertical">
    <ImageView
        android:layout_width="110dp"

        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/emagazines" />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="E-Magazines"
        android:textStyle="bold"/>

</LinearLayout>

        <LinearLayout
            android:layout_width="125dp"
            android:layout_height="150dp"
            android:layout_marginLeft="40dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="110dp"

                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ebook" />

            <TextView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginLeft="38dp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:textColor="#2679AB"
                android:text="E-Book"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <LinearLayout
            android:layout_marginLeft="40dp"
            android:layout_width="125dp"
            android:layout_height="150dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="110dp"

                android:layout_height="100dp"
                android:layout_marginLeft="20dp"

                android:background="@drawable/packages" />

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Packages" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/l4"
            android:layout_width="125dp"
            android:layout_height="150dp"
            android:layout_marginLeft="40dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="110dp"

                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/exam" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:text="Test" />

        </LinearLayout>

    </LinearLayout>



</LinearLayout>